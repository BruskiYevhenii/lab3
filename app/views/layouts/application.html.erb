<!DOCTYPE html>
<html>
<head>
  <title>Uzhgorod CoffeeShops</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body class="bg-dark text-white">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container d-flex justify-content-between w-100">
      <!-- Left aligned: Navbar brand -->
      <a class="navbar-brand" href="<%= root_path %>">Кав'ярні Ужгорода</a>
      
      <!-- Right aligned: Navigation links -->
      <div class="d-flex">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item"><%= button_to 'Вийти', destroy_user_session_path, method: :delete, class: 'nav-link btn-primary text-white' %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'Увійти', new_user_session_path, class: 'nav-link btn-primary text-white' %></li>
            <li class="nav-item"><%= link_to 'Реєстрація', new_user_registration_path, class: 'nav-link btn-primary text-white' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  
  

  <div class="container py-5 text-white">
    <%= yield %>
  </div>
</body>
</html>